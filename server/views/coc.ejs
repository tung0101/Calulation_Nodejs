<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cọc</title>
  <!-- Thêm Bootstrap CSS từ CDN -->
  <script src="/javascripts/date.js"></script>
  <script src="/javascripts/currency.js"></script>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">
</head>

<body>
  <!-- Thanh menu Bootstrap -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/home">Trang Chủ</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/lich">Lịch</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/orderList">Đơn Hàng</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/priceList">Bảng Giá</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/depositList">Cọc</a>
          </li>

        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="row">
      <div class="col-3">
        <h3 class="mt-3">Thêm cọc</h3>
        <form action="/adddepositList" method="POST" class="text-center">
          <div class="mb-3">
            <input type="text" class="form-control" placeholder="Người cọc" name="nguoi" required>
          </div>
          <div class="mb-3">
            <input type="date" class="form-control" placeholder="Ngày cọc" name="ngay_thanh_toan" required>
          </div>
          <div class="mb-3">
            <input type="number" class="form-control" placeholder="Tiền cọc" name="so_tien" required>
          </div>
          <button type="submit" class="btn btn-success">Thêm</button>
        </form>
      </div>

      <div class="col-9">
        <h3 class="text-center mt-3">Danh sách cọc</h3>
        <table class="table table-bordered">
          <thead>
            <tr class="text-center bg-primary text-white">
              <!-- <th>ID</th> -->
              <th>Ngày cọc</th>
              <th>Người cọc</th>
              <th>Tiền cọc</th>
              <th>Tính năng</th>
            </tr>
          </thead>
          <tbody>
            <% coc.forEach(function(item) { %>
              <tr class="text-center">
                <!-- <td>
                  <%= item.id %>
                </td> -->
                <td class="format-date">
                  <%=item.ngay_thanh_toan %>
                </td>
                <td>
                  <%= item.nguoi %>
                </td>
                <td class="format-currency">
                  <%= item.so_tien %>
                </td>
                <td>
                  <button class="btn btn-primary">Sửa</button>
                  <button class="btn btn-danger" >Xóa</button>
                </td>
              </tr>
              <% }); %>
          </tbody>
        </table>
      </div>
    </div>
    
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js"></script>
</body>

</html>